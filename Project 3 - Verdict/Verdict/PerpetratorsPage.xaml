<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VerdictProject3.PerpetratorsPage"
             Title="Arrested Suspects"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <VerticalStackLayout Padding="20">
        <Button Text="⬅ Back"
                Clicked="OnBackClicked"
                BackgroundColor="{DynamicResource PrimaryBlue}"
                TextColor="{DynamicResource ButtonTextColor}"
                WidthRequest="80"
                HorizontalOptions="Start"
                Margin="10"/>

        <Label Text="Jail / Perpetrator Database"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="{DynamicResource PrimaryBlue}" />

        <CollectionView x:Name="PerpListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="{DynamicResource PrimaryBlue}"
                           BackgroundColor="{DynamicResource EntryBackground}"
                           CornerRadius="10"
                           Padding="10"
                           Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding FullName}"
                                   FontSize="18"
                                   TextColor="{DynamicResource MainText}" />
                            <Label Text="{Binding Role}"
                                   FontSize="14"
                                   TextColor="{DynamicResource SecondaryText}" />
                            <Label Text="Status: Arrested ✅"
                                   FontSize="12"
                                   TextColor="Red" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
