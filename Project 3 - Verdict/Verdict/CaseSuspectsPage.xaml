<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VerdictProject3.CaseSuspectsPage"
             Title="Case Suspects"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Button Text="â¬… Back"
                Clicked="OnBackClicked"
                BackgroundColor="{DynamicResource PrimaryBlue}"
                TextColor="{DynamicResource ButtonTextColor}"
                WidthRequest="80"
                HorizontalOptions="Start"
                Margin="10"/>


        <!-- Page Title -->
        <Label 
            Text="Suspects"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="{DynamicResource PrimaryBlue}" 
            HorizontalOptions="Center" />

        <!-- Filter bar -->
        <Entry x:Name="FilterEntry"
               Placeholder="Filter by name..."
               BackgroundColor="{DynamicResource EntryBackground}"
               TextColor="{DynamicResource MainText}"
               PlaceholderColor="{DynamicResource SecondaryText}"
               TextChanged="OnFilterTextChanged" />

        <!-- Suspect List -->
        <CollectionView x:Name="SuspectListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{DynamicResource EntryBackground}"
                           CornerRadius="10"
                           Padding="10"
                           Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" 
                                   FontSize="18" 
                                   TextColor="{DynamicResource MainText}" />
                            <Label Text="{Binding Surname}" 
                                   FontSize="14" 
                                   TextColor="{DynamicResource MainText}" />
                            <Label Text="{Binding Role}" 
                                   FontSize="12" 
                                   TextColor="{DynamicResource SecondaryText}" />
                            <Label Text="{Binding IsArrested, StringFormat='Arrested: {0}'}"
                                   FontSize="12"
                                   TextColor="{DynamicResource SecondaryText}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
