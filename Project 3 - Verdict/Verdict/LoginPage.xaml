<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VerdictProject3.LoginPage"
             Title="Login Page"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        
        <VerticalStackLayout Padding="40" Spacing="25" VerticalOptions="Center">

            <Button Text="â¬… Back"
                    Clicked="OnBackClicked"
                    BackgroundColor="{DynamicResource PrimaryBlue}"
                    TextColor="{DynamicResource ButtonTextColor}"
                    WidthRequest="80"
                    HorizontalOptions="Start"
                    Margin="10"/>
            
            <!-- App Title -->
            <Label Text="Verdict"
                   FontSize="100"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource PrimaryBlue}"
                   HorizontalOptions="Center" />

            <!-- Slogan -->
            <Label Text="Your timeline to the truth"
                   FontSize="30"
                   TextColor="{DynamicResource AccentRed}"
                   HorizontalOptions="Center" />

            <!-- Police number -->
            <Entry Placeholder="Police Badge Number"
                   x:Name="NumberEntry"
                   TextColor="{DynamicResource MainText}"
                   PlaceholderColor="{DynamicResource SecondaryText}"
                   Keyboard="Numeric"
                   BackgroundColor="{DynamicResource EntryBackground}"
                   HeightRequest="50" />

            <!-- Password -->
            <Entry Placeholder="Password"
                   x:Name="PasswordEntry"
                   IsPassword="True"
                   TextColor="{DynamicResource MainText}"
                   PlaceholderColor="{DynamicResource SecondaryText}"
                   BackgroundColor="{DynamicResource EntryBackground}"
                   HeightRequest="50" />

            <!-- Login Button -->
            <Button Text="Login"
                    BackgroundColor="{DynamicResource AccentRed}"
                    TextColor="{DynamicResource PageBackgroundColor}"
                    CornerRadius="8"
                    HeightRequest="50"
                    Clicked="OnLoginClicked" />

            <!-- Forgot Password -->
            <Label Text="Forgot Password?"
                   TextColor="{DynamicResource PrimaryBlue}"
                   HorizontalOptions="Center"
                   FontSize="12">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
